/**
 * Scratchpad for prototyping styles
 */

.info
	display: block

.logo
	text-align: center
	
.form-box
	display: flex
	width: 450px
	margin: auto
	input
		flex: 1
		border: 4px solid black
		padding: 20px
		margin-right: 5px
		outline: none
		color: color.subtext

.button
	cursor: pointer
	padding: 20px 40px
	background: black
	border: 4px solid black
	color: white
	outline: none
	&:hover
		background: white
		color: black

.pulse
	border: 6px solid red
	border-radius: 50%

.notifications
	display: block
	position: fixed
	right: 0
	width: 400px
	height: 100%

.notification
	position: relative
	padding: 20px
	background: black
	color: white
	margin: 10px

.pop-enter
	opacity: 0
	transform: scale(2)
	background: color.highlight
	
.pop-enter-active
	transition: all .4s ease-in-out
	transform-origin:right bottm
	
.pop-leave
	transform: scale(1)
	transform-origin:bottom

.pop-leave-to
	transform: scale(0)
	opacity: 0

.pop-leave-active
	transition: all .7s ease-in-out
	transform-origin:right top

